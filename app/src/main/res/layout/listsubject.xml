<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5DEB3"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="Môn học "
            android:textSize="25sp"
            android:textColor="#000000"
            android:id="@+id/txtview_SubjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Số tín chỉ "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtview_Credit"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:src="@drawable/ic_baseline_subject_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageButton>
    <ImageButton
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_baseline_update_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageButton>
    <ImageButton
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageButton>
</LinearLayout>